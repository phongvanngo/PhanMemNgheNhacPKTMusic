<UserControl x:Class="IndeeMusee.Views.ListMusicInPlaylist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:IndeeMusee.Views"
             xmlns:views="clr-namespace:IndeeMusee.Views"
             mc:Ignorable="d"
             d:DesignHeight="520"
             d:DesignWidth="930"
             x:Name="MyMusicDisplay">
    <UserControl.Resources>
        <Style x:Key="ButtonMoreInfo"
               TargetType="Button">
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="Background"
                    Value="Transparent"></Setter>
            <EventSetter Event="Click"
                         Handler="Button_Click"></EventSetter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                x:Name="border">
                            <Image Source="/Assets/Group 91.png" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/IndeeMusee;component/Assets/GlassBG.png"
                                                    Stretch="None" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor"
                                        TargetName="border"
                                        Value="Hand"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonFavoriteSong"
               TargetType="Button">
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="Background"
                    Value="Transparent"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                x:Name="border">
                            <Image Source="/Assets/heart_huy.png" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/IndeeMusee;component/Assets/GlassBG.png"
                                                    Stretch="None" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor"
                                        TargetName="border"
                                        Value="Hand"></Setter>
                                
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonFavoriteSongFill"
               TargetType="Button">
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="Background"
                    Value="Transparent"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                x:Name="border">
                            <Image Source="/Assets/heart.png" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/IndeeMusee;component/Assets/GlassBG.png"
                                                    Stretch="None" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor"
                                        TargetName="border"
                                        Value="Hand"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="grid"
          >
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.3">

            </SolidColorBrush>
        </Grid.Background>

