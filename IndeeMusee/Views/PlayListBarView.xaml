                    </Grid.ColumnDefinitions>
                    <Image Source="/IndeeMusee;component/Assets/Tìm kiếm.png"
                           Height="29"
                           Width="25" />
                    <Label Padding="0,0,0,0"
                           Content="EXPLORE"
                           FontSize="36"
                           Foreground="#FCF8F8"
                           Grid.Column="1" />
                </Grid>
            </Button>
